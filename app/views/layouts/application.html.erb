<!DOCTYPE html>
<html>
  <head>
    <title>ЗГ Территории</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :yandex_map_scripts %>
    <% if meta_field.present? %>
      <%= meta_field_item('keywords') %>
      <%= meta_field_item('title') %>
      <%= meta_field_item('header') %>
      <%= meta_field_item('description') %>
      <%= meta_field_item('introduction') %>
      <%= og_meta_field_item('title') %>
      <%= og_meta_field_item('description') %>
      <%= og_meta_field_item('image') %>
    <% end %>
  </head>

  <body>
    <%= render partial: 'zg_header/zg_header' %>
    <%= render partial: 'layouts/categories_header' if @current_city.present? %>
    <div class='container'>
      <%= link_to 'Мои огранизации', my_organizations_path if current_user && @current_city.present? %>
      <%= yield %>
    </div>
    <%= render partial: 'layouts/footer' %>
  </body>
</html>
