<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :yandex_map_scripts %>
    <%= render partial: 'layouts/meta_description' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render partial: 'zg_header/zg_header' %>
    <%= render partial: 'layouts/categories_header' if @current_city.present? %>
    <div class='container'>
      <%= link_to 'Мои огранизации', my_organizations_path if current_user && @current_city.present? %>
      <%= yield %>
    </div>
    <%= render partial: 'layouts/footer' %>
  </body>
</html>
