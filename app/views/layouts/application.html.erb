<!DOCTYPE html>
<html>
  <head>
    <title>ЗГ Территории</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :yandex_map_scripts %>
  </head>

  <body>
    <%= render partial: 'zg_header/zg_header' %>
    <%= render partial: 'layouts/categories_header' unless @current_city.empty? %>
    <div class='container'>
      <%= link_to 'Мои огранизации', my_organizations_path if current_user && @current_city.any? %>
      <%= yield %>
    </div>
    <%= render partial: 'layouts/footer' %>
  </body>
</html>
